{
    "env": {
        "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module"
    },
    "rules": {
        "indent": [
            "error",
            4
        ],
        "no-var": ["error"],
        "no-console": "off",
        "linebreak-style": ["error", "unix"],
        "semi": [
            "error",
            "always"
        ],
        "indent": "off",
        "no-unused-vars": ["warn", { "args": "all", "argsIgnorePattern": "^_" }]
    }
}
